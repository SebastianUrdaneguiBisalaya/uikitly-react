{
    "compilerOptions": {
      "target": "es2022",
      "module": "esnext",
      "jsx": "react-jsx",
      "declaration": true,
      "emitDeclarationOnly": false,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "dist",
      "lib": [
        "es2022",
        "dom"
      ],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ]
}